# ===========================================
# BACKEND PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# ===========================================

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# CORS - Allowed frontend URLs (comma-separated)
# Example: https://your-app.vercel.app,https://your-custom-domain.com
FRONTEND_URLS=http://localhost:3000

# Groq API Key for LLM
GROQ_API_KEY=your-groq-api-key-here

# CoinGecko API (if using pro version)
COINGECKO_API_KEY=

# CryptoPanic API for news
CRYPTOPANIC_API_KEY=your-cryptopanic-api-key

# Brevo (newsletter) API
BREVO_API_KEY=your-brevo-api-key
